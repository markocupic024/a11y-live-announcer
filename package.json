{
  "name": "a11y-live-announcer",
  "version": "1.1.1",
  "type": "module",
  "description": "React ARIA live region announcer for screen reader notifications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "demo": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build",
    "demo:preview": "cd demo && npm run preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markocupic024/a11y-live-announcer.git"
  },
  "keywords": [
    "react",
    "accessibility",
    "a11y",
    "aria-live",
    "screen-reader",
    "announcer",
    "wcag",
    "inclusive",
    "assistive-technology"
  ],
  "author": "Marko Cupic",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rollup": "^4.54.0",
    "ts-jest": "^29.2.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
